function etoile()
        tab_etoile = {}
        for i=1,20  do
            creation_etoile = {
                y= rnd(128),
                x= rnd(128),
                col = 7,
                speed = 4
            }
            add(tab_etoile,creation_etoile)
        end
end


function menu_update()
   
    etoile() 
---------------------------------------------------------------------------------   
    if btnp(⬇️) then
        coord_curse.y+= 10
    elseif btnp(⬆️) then 
        coord_curse.y-= 10
    end
    if coord_curse.y > 70 then
        coord_curse.y = 40
    elseif coord_curse.y < 40 then 
        coord_curse.y = 70
    end 

    if btnp(❎) and coord_curse.y == coordoner_joueur_solo.y then
        show_game_solo()
    elseif btnp(❎) and coord_curse.y == coordoner_multiplayer.y then 
        show_game_multiPlayer()
    elseif btnp(❎) and coord_curse.y == coordoner_option.y then 
        show_game_multiPlayer()
    elseif btnp(❎) and coord_curse.y == coordoner_quitter.y then 
        show_quitter()
    end 


end



